<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="340.0" spacing="20.0" stylesheets="@vidmot/css/floskur.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.floskur.FloskurController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox prefHeight="30.0" prefWidth="200.0">
      <children>
         <Label prefHeight="30.0" prefWidth="126.0" style="-fx-border-color:black" text="Dósir">
            <HBox.margin>
               <Insets right="10.0" />
            </HBox.margin></Label>
         <TextField fx:id="fxDosir" onAction="#onDosir" prefHeight="43.0" prefWidth="200.0" promptText="Sláðu inn fjölda">
            <HBox.margin>
               <Insets right="10.0" />
            </HBox.margin></TextField>
         <Label fx:id="fxISKDosir" prefHeight="30.0" prefWidth="135.0" style="-fx-border-color: black;" text="0 " />
      </children>
   </HBox>
   <HBox prefHeight="30.0" prefWidth="200.0">
      <children>
         <Label prefHeight="30.0" prefWidth="126.0" style="-fx-border-color: black;" text="Flöskur">
            <HBox.margin>
               <Insets right="10.0" />
            </HBox.margin></Label>
         <TextField fx:id="fxFloskur" onAction="#onFloskur" prefHeight="26.0" prefWidth="200.0" promptText="Sláðu inn fjölda">
            <HBox.margin>
               <Insets right="10.0" />
            </HBox.margin></TextField>
         <Label fx:id="fxISKFloskur" prefHeight="30.0" prefWidth="135.0" style="-fx-border-color: black;" text="0" />
      </children>
   </HBox>
   <HBox prefHeight="30.0" prefWidth="298.0">
      <children>
         <Label prefHeight="30.0" prefWidth="68.0" style="-fx-border-color: black;" text="Samtals">
            <HBox.margin>
               <Insets right="10.0" />
            </HBox.margin></Label>
         <Label fx:id="fxSamtals" prefHeight="30.0" prefWidth="142.0" style="-fx-border-color: black;" text="0">
            <HBox.margin>
               <Insets right="10.0" />
            </HBox.margin></Label>
         <Label fx:id="fxISKsamtals" prefHeight="30.0" prefWidth="75.0" style="-fx-border-color: black;" text="0" />
      </children>
   </HBox>
   <HBox prefHeight="30.0" prefWidth="200.0">
      <children>
         <Button fx:id="fxGreida" mnemonicParsing="false" onAction="#onGreida" prefHeight="25.0" prefWidth="64.0" text="Greiða">
            <HBox.margin>
               <Insets right="10.0" />
            </HBox.margin></Button>
         <Label fx:id="fxGreidaSamtals" prefHeight="30.0" prefWidth="142.0" style="-fx-border-color: black;" text="0">
            <HBox.margin>
               <Insets right="10.0" />
            </HBox.margin></Label>
         <Label fx:id="fxISKGreida" prefHeight="30.0" prefWidth="75.0" style="-fx-border-color: black;" text="0 " />
      </children>
   </HBox>
   <HBox prefHeight="30.0" prefWidth="200.0">
      <children>
          <Button fx:id="fxHreinsa" onAction="#onHreinsa" prefHeight="25.0" prefWidth="64.0" text="Hreinsa" />
      </children>
   </HBox>
</VBox>
